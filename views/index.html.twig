{% extends "layout.html.twig" %}

{% block title%}Home{% endblock %}

{% block content %}

{% for flashMessage in app.session.flashbag.get('success') %}
		<div class="alert alert-success">
			{{ flashMessage }}
		</div>
{% endfor %}
              <!-- Caroussel-->
              <div class="carousel fade-carousel slide carou" data-ride="carousel" data-interval="4000" id="bs-carousel">

                  <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#bs-carousel" data-slide-to="1"></li>
                    <li data-target="#bs-carousel" data-slide-to="2"></li>
                  </ol>

                  <!-- Wrapper for slides -->

                  <div class="carousel-inner">

                    {% for slide in slides|slice(0, 1) %}    
                    <div class="item slides active"> 
                      <div class="slide-0"><img src="{{ app.request.basepath }}/images/{{ slide.image }}"  alt="{{ slide.image }} "/>
                      </div>
                          <div class="texteCaroussel">
                            <hgroup>
                                <h1>{{ slide.title }}</h1>        
                                <h3>{{ slide.subTitle }}</h3>
                            </hgroup>
                          </div>
                    </div>

                    {% endfor %}

                    {% for slide in slides|slice(1, 1) %}
                    <div class="item slides "> 
                        <div class="slide-1"><img src="{{ app.request.basepath }}/images/{{ slide.image }}"  alt="{{ slide.image }} "/>
                        </div>
                            <div class="texteCaroussel">
                                <hgroup>
                                    <h1>{{ slide.title }}</h1>        
                                    <h3>{{ slide.subTitle }}</h3>
                                </hgroup>
                            </div>
                    </div>
                    {% endfor %}

                    {% for slide in slides|slice(2, 1) %}
                    <div class="item slides "> 
                      <div class="slide-2"><img src="{{ app.request.basepath }}/images/{{ slide.image }}"  alt="{{ slide.image }} "/></div>
                          <div class="texteCaroussel">
                            <hgroup>
                                <h1>{{ slide.title }}</h1>        
                                <h3>{{ slide.subTitle }}</h3>
                            </hgroup>
                          </div>
                    </div>
                    {% endfor %}

                  </div> 
            </div>
          <!-- fin caroussel-->
           
            <!--Actualités-->
            
            <section class=" container actualite text-center">
              <h2>Nos articles</h2>
                <div class="row">
					{% for article in articles|slice(0, 3) %}
                    <!--Article-->
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail articles">
                            <img src="{{ app.request.basepath }}/images/{{ article.image }}"  alt="{{ article.image }} "/>
                            <div class="caption">
                                <h2>
									<a class="articleTitle" href="{{ path('article', { 'id': article.id }) }}">{{ article.title }}</a>
								</h2>
                                <p>{{ article.dateArt|date('d-m-Y') }}</p>
                                <p class="text-justify">
                                  {{ article.content | truncate(300) }}
                                </p>
                            </div>
                        </div>
                    </div>
					{% endfor %}
                    <!--Plus d'articles-->
                    <a href="{{ path('all_articles') }}" class="btn btn-lg indexbtn" role="button"><i class="fa fa-plus" aria-hidden="true"></i> ARTICLES</a>
                </div>   <!--Fin row-->
            </section>
            <!--Fin actualité-->
            
            <!--Association-->
            
            <section class="container text-center asso">
                    <h1>ASRAC</h1>
					{% for textes in texte|slice(0, 1) %}
                    <p class="col-md-8 col-md-offset-2">{{ textes.texteDesc }}</p>
					{% endfor %}
                    <br>
                    <div class="row">
                        <div class="col-sm-4 bureauHaut">
                            <h3 class="text-center"><strong>Imed Hezzi</strong></h3><br>
                            <img src="{{ app.request.basepath }}/images/vice-pdt.png"  class="img-circle person" alt="vice-pdt" width="255" height="255">
                            <div>
                                <h3>Vice-président</h3>
                                <p>Ut enim ad minim veniam</p>
                                <p>Membre depuis 2015</p>
                            </div>
                        </div>
                        <div class="col-sm-4 bureauHaut">
                           <h3 class="text-center"><strong>Habib Azaouzi</strong></h3><br>
                            <img src="{{ app.request.basepath }}/images/president.png" class="img-circle person" alt="Président" width="255" height="255">
                            <div>
                                <h3>Président-fondateur</h3>
                                <p>Ut enim ad minim veniam</p>
                                <p>Fondateur</p>
                            </div>
                        </div>
                        <div class="col-sm-4 bureauHaut">
                            <h3 class="text-center"><strong>David Flamant</strong></h3><br>
                            <img src="{{ app.request.basepath }}/images/vice-pdt2.png" class="img-circle person" alt="vice-pdt" width="255" height="255">
                            <div>
                                <h3>Vice-président</h3>
                                <p>Ut enim ad minim veniam</p>
                                <p>Membre depuis 2014</p>
                            </div>
                        </div>
                    </div> <!--fin row-->

                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-2 text-center bureauBas">
                            <h3 class="text-center"><strong>Smail Altaleb</strong></h3><br>
                                <img src="{{ app.request.basepath }}/images/tresorier.png" class="img-circle person" alt="Trésorier" width="255" height="255">
                            <div>
                                <h3>Trésorier</h3>
                                <p>Ut enim ad minim veniam</p>
                                <p>Membre depuis 2015</p>
                            </div>
                        </div>
                        <div class="col-sm-4 text-center bureauBas">
                            <h3 class="text-center"><strong>Gwenola Marc</strong></h3><br>
                                <img src="{{ app.request.basepath }}/images/secretaire.png" class="img-circle person" alt="secretaire" width="255" height="255">
                            <div>
                                <h3>Secrétaire</h3>
                                <p>Ut enim ad minim veniam</p>
                                <p>Membre depuis 2015</p>
                            </div>
                        </div>
                    </div> <!--fin row-->
            </section>
            <!--Fin association-->
            
            <!--Evenement-->
            
            <section id="evenement" class="container text-center evenements">
                <div class="evenementContent text-center">
                       <i class="fa fa-calendar-o fa-3x i1" aria-hidden="true"></i>
                        <h2 class="text-center">Nos Events</h2>
                        <p class="text-center">Lorem ipsum we'll play you some music.<br> Lorem ipsum we'll play you some music</p>
                    <div class="row">    
                        <ul class="col-md-8 col-md-offset-2 list-group text-center events">
                                {% for key, array_event in events %} 
                                <li class="list-group-item" data-toggle="modal" data-target="#{{ key }}">{{ months[key] }}<span class="badge">{{ array_event|length }}</span></li>

                                {% endfor %}
                        </ul>
                     </div>

                    <!-- Modal agenda mois--> 
                    
                    {% for key, array_event in events %}
                    <div class="modal fade" id="{{ key }}" role="dialog" data-month='12'>
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content" >
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">×</button>
                                    <h2><i class="fa fa-calendar" aria-hidden="true"></i> Agenda</h2>
                                </div>
                                <div class="modal-body">
                                    <div class="row text-center">
                                        {% for event in array_event  %} 
                                            <div class="col-sm-4">
                                                <div class="thumbnail thumbmodal">
                                                    <img src="{{ app.request.basepath }}/images/{{event.image}}" alt="{{event.image}}" >
                                                    <p><strong>{{event.Title}}</strong></p>
                                                    <p><strong>{{event.lieu}}</strong></p>
                                                    <p>{{event.dateEv|date('d-m-Y')}}</p>
                                                    <a role="button" class="btn" href ="{{ path('event', { 'id': event.id }) }}" >+ de détails</a>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!--fin modal-->
                    {% endfor %}
                </div>
            </section>
            <!--fin partie events-->
            
    <!--Charte de l'association-->
           
            <section class="charte">  
                <div class = "jumbotron">
                   <div class = "container text-center">
                         <i class="fa fa-file-o fa-3x i2" aria-hidden="true"></i>
                          <h2>Notre Charte</h2>
                          <p class="telechargementCharte">
                          <a href ="{{ app.request.basepath }}/images/Charte.pdf" class = "btn btn-lg indexbtn3" title ="Télécharger notre charte" role = "button">Telecharger</a>
                          </p>
                        <div class="adhesion"></div>
                          <h2>Adhérer</h2>
                          <p class="telechargementAdhesion">
                          <a href ="{{ app.request.basepath }}/images/Bulletin adhésion 2016.pdf" class = "btn btn-lg indexbtn3" title ="Télécharger notre bulletin d'adhésion" role ="button">Telecharger</a>
                          </p>
                        </div>
                   </div>
                </div>
            </section>
    
    <!--Formulaire de contact-->
    
            <section id="formulaire" class="contact container text-center">
                  <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                              <div class="row">
                                   <i class="fa fa-paper-plane-o fa-3x i3" aria-hidden="true"></i>
                                    <h2 class="titrecontact"> Nous contactez</h2>
                                    <form method="post" action="{{ path('mail') }}">
                                    <div class="col-sm-6 form-group">
                                          <input class="form-control" id="name" name="name" placeholder="Nom-Prenom" type="text" required>
                                    </div>
                                    <div class="col-sm-6 form-group">
                                      <input class="form-control" id="email" name="adresse" placeholder="Email" type="email" required>
                                    </div>
                              </div>
                        <textarea class="form-control" id="comments" name="msg" placeholder="Message" rows="5"></textarea><br>
                              <div class="row">
                                    <div class="col-sm-12 form-group text-center">
                                      <button class="btn btn-lg indexbtn" type="submit">Envoyer</button>
                                    </div>
                              </div>
                                    </form>
                            </div>
                        </div> <!--fin row-->
            </section>

 {% endblock %}
